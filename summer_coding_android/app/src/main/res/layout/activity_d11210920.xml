<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".d11210920.D11210920Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/dh_mint_green"
        android:paddingStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/dh_bookTicket_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dh_book"
            android:textSize="25dp"
            android:textColor="@color/white"
            >

        </TextView>

        <ImageView
            android:id="@+id/dh_bookTicket_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/book_ticket"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout2"
        app:layout_constraintTop_toBottomOf="@id/dhlayout1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/dh_green"
        android:paddingStart="20dp"
        >

        <ImageView
            android:id="@+id/dh_change_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/change_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
        <TextView
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/dh_change_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dh_change"
            android:textSize="25dp"
            android:textColor="@color/white"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout3"
        app:layout_constraintTop_toBottomOf="@id/dhlayout2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/dh_dark_green"
        android:paddingStart="20dp"
        >
        <TextView
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/dh_approvalTime_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dh_approval_time"
        android:textSize="25dp"
        android:textColor="@color/white"
        >

    </TextView>

        <ImageView
            android:id="@+id/dh_approvalTime_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/approval_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout4"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintEnd_toStartOf="@id/dhlayout5"
        app:layout_constraintTop_toBottomOf="@+id/dhlayout3"
        app:layout_constraintBottom_toTopOf="@id/agreeText"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/dhFreeticket_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ticket"
            >
        </ImageView>
        <TextView
            android:id="@+id/dhFreepassTicket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dhFreeticket_image"
            android:text="@string/dh_Freepass_string"
            android:textStyle="bold"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/dhlayout5"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/dhlayout6"
        app:layout_constraintTop_toBottomOf="@+id/dhlayout3"
        app:layout_constraintBottom_toTopOf="@id/agreeText"
        app:layout_constraintStart_toEndOf="@id/dhlayout4">
        <ImageView
            android:id="@+id/dheasyBooking_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/easybooking"
            >
        </ImageView>
        <TextView
            android:id="@+id/dheasyBooking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dheasyBooking_image"
            android:text="@string/dh_easybooking_string"
            android:textStyle="bold"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/dhlayout6"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/dhlayout7"
        app:layout_constraintTop_toBottomOf="@+id/dhlayout3"
        app:layout_constraintBottom_toTopOf="@id/agreeText"
        app:layout_constraintStart_toEndOf="@id/dhlayout5">
        <ImageView
            android:id="@+id/dhtimetable_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/timetable"
            >
        </ImageView>
        <TextView
            android:id="@+id/dhtimetable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dhtimetable_image"
            android:text="@string/dh_timetable_string"
            android:textStyle="bold"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/dhlayout7"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/dhlayout8"
        app:layout_constraintTop_toBottomOf="@+id/dhlayout3"
        app:layout_constraintBottom_toTopOf="@id/agreeText"
        app:layout_constraintStart_toEndOf="@id/dhlayout6">
        <ImageView
            android:id="@+id/dhyanolza_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/yanolza"
            >
        </ImageView>
        <TextView
            android:id="@+id/dhyanolza_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dhyanolza_image"
            android:text="@string/dh_yanolza_string"
            android:textColor="@color/dh_pink"
            android:textStyle="bold"
            >

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout8"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dhlayout7"
        app:layout_constraintBottom_toTopOf="@id/agreeText"
        app:layout_constraintTop_toBottomOf="@+id/dhlayout3">

        <ImageView
            android:id="@+id/dhmypage_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/mypage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/dhmypage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dh_mypage_string"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dhmypage_image">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/agreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dhlayout9"
        app:layout_constraintTop_toBottomOf="@id/dhlayout7"
        android:text="@string/dh_agreement_string"
        android:textColor="@color/dh_agreeColor"
        >
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dhlayout9"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/agreeText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/baclgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backgroundpic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
