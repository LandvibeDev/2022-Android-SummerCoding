<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구"
        android:id="@+id/dh_friendtext"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/dh_friendtext"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/dh_myfrofile"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_common"
            android:layout_marginStart="15dp"
            android:id="@+id/dh_myfrofileimage"
            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="내 프로필"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp">

        </TextView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:id="@+id/dh_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dh_myfrofile"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/dh_friendslist_item"
        tools:itemCount="100"
        />

</androidx.constraintlayout.widget.ConstraintLayout>